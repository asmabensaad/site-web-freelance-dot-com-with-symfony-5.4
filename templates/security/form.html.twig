<body>

<div class="parent">



<h2>Create Account</h2>
   {{ form_start(form) }}
<div class="form-group">

<input type="text" placeholder="Username" {{ form_widget(form.Username)}}  
</div>

<div class="form-group">

<input type="email" placeholder="Email"{{ form_widget(form.email)}}

  </div>  
  <div class="form-group">

   
    
<input type="password" placeholder="Password" {{form_widget(form.password.first)}}
</div>

<div class="form-group">
    
<input type="password" id="verifpass" placeholder="Repeat Password"{{ form_widget(form.password.second)}}
   </div> 
    <input type="submit" value=" Sign up">
    <input  type="reset" value=" cancel" >
   


    
    {{ form_end(form) }}

 </div>

    
